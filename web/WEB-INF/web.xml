<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>booksFilePath</param-name>
        <param-value>/WEB-INF/books.txt</param-value>
    </context-param>
    <listener>
        <listener-class>club.util.CartContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>CGDisplayBooksServlet</servlet-name>
        <servlet-class>club.admin.CGDisplayBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CGAddBookServlet</servlet-name>
        <servlet-class>club.admin.CGAddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CGLoanServlet</servlet-name>
        <servlet-class>club.cart.CGLoanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CGCartServlet</servlet-name>
        <servlet-class>club.cart.CGCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CGClearCartServlet</servlet-name>
        <servlet-class>club.cart.CGClearCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CGMemberAdminController</servlet-name>
        <servlet-class>club.admin.CGMemberAdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CGDisplayBooksServlet</servlet-name>
        <url-pattern>/CGDisplayBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CGAddBookServlet</servlet-name>
        <url-pattern>/CGAddBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CGLoanServlet</servlet-name>
        <url-pattern>/CGLoan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CGCartServlet</servlet-name>
        <url-pattern>/CGCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CGClearCartServlet</servlet-name>
        <url-pattern>/CGClearCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CGMemberAdminController</servlet-name>
        <url-pattern>/CGMemberAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>CGIndex.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/CGError.jsp</location>
    </error-page>
</web-app>
